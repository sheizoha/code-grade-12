#include <iostream>
#include <fstream>

using namespace std;

int main() {
    ifstream inputFile("message.txt");
    if (!inputFile) {
        cout << "Error opening file." << endl;
        return 0;
    }

    char maxChar = '\0';
    int aValue;
    while (inputFile >> aValue) {
        char ch = static_cast<char>(aValue);
        if (ch > maxChar) {
            maxChar = ch;
        }
    }
    inputFile.close();

    cout << "The maximum character value in the file is: " << static_cast<int>(maxChar) << endl;

  
}

