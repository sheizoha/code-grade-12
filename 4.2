#include <iostream>
#include <fstream>
#include <vector>

using namespace std;

bool linearSearch(const vector<int>& numbers, int target) {
    for (int i = 0; i < numbers.size(); ++i) {
        if (numbers[i] == target) {
            return true;
        }
    }
    return false;
}

int main() {
    ifstream inputFile("numbers.txt");
    if (!inputFile) 
    {
        cout << "Error opening file." << endl;
        return 0;
    }

    vector<int> numbers;
    int num;
    while (inputFile >> num) 
    {
        numbers.push_back(num);
    }
    inputFile.close();

    int target = 343;
    if (linearSearch(numbers, target))
    {
        cout << "Number " << target << " found in the file." << endl;
    } 
    else 
    {
        cout << "Number " << target << " not found in the file." << endl;
    }

  
}
