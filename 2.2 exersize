{

//2.2 exercise 1 

cout << "sum: " << sum(3,6) << "\n";
cout << "sum: " << sum(2.5, 2.5) << "\n";
cout << "sum: " << sum(250, 250) << "\n";


//2.2 exercise 2

cout << "average int: " << averageVector(2,5,3) << "\n";
cout << "average float: " << averageVector(2.5, 3.4, 6.5, 8.9) << "\n";
cout << "average double: " << averageVector(3500, 3636, 2005) << "\n";

