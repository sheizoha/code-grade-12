#include<iostream>
#include<string>
#include<vector>

using namespace std;

//2.2-1
double sum(vector<double> numbers)
{
    double sum = 0;

    for (double i = 0; i < numbers.size(); i++)
    {
        sum += numbers[i];
    }
return sum;
}
 int sum(vector<int> numbers)
{
    int sum = 0;

    for (int i = 0; i < numbers.size(); i++)
    {
        sum += numbers[i];
    }
return sum;
}
float sum(vector<float> numbers)
{
    float sum = 0;

    for (float i = 0; i < numbers.size(); i++)
    {
        sum += numbers[i];
    }
return sum;
}

//2.2-2

int averageVector(vector<int> numbers)
{
    int final = 0;
    int avrg, size;


    for (int j = 0; j < numbers.size(); j++)
    {
        final += numbers[j];

        size = j + 1;

        
    }
}
float averageVector(vector<float> numbers)
{
    float final = 0;
    float avrg, size;


    for (float j = 0; j < numbers.size(); j++)
    {
        final += numbers[j];

        size = j + 1;

        
    }
}
double averageVector(vector<double> numbers)
{
    double final = 0;
    double avrg, size;


    for (double j = 0; j < numbers.size(); j++)
    {
        final += numbers[j];

        size = j + 1;

        
    }
}

//2.2-3

int GCD(int a, int b)
{
 
 int result = min(a, b);

 while (result > 0){

    if (a % result == 0 && b % result)
    {
        break;
    }
    return ;
 }
 return result;

}
double GCD(double a, double b)
{
 
 double result = min(a, b);

 while (result > 0){

    if (a % result == 0 && b % result)
    {
        break;
    }
    return ;
 }
 return result;

}
float GCD(float a, float b)
{
 
 float result = min(a, b);

 while (result > 0){

    if (a % result == 0 && b % result)
    {
        break;
    }
    return ;
 }
 return result;

}




